{
    "info": {
        "name": "Library Management System API",
        "_postman_id": "library-system-api",
        "description": "Postman collection for Library Management System API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://127.0.0.1:8000/api/v1"
        }
    ],
    "item": [
        {
            "name": "Books",
            "item": [
                {
                    "name": "Get All Books",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{base_url}}/books"
                    }
                },
                {
                    "name": "Create Book",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Sample Book\",\n  \"description\": \"A sample description\",\n  \"isbn\": 1234567890,\n  \"publication_date\": \"2025-10-19\",\n  \"authors\": [1, 2]\n}"
                        },
                        "url": "{{base_url}}/books"
                    }
                },
                {
                    "name": "Update Book",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Book Title\",\n  \"description\": \"Updated description\",\n  \"isbn\": 9876543210,\n  \"publication_date\": \"2025-10-20\",\n  \"authors\": [1]\n}"
                        },
                        "url": "{{base_url}}/books/1"
                    }
                },
                {
                    "name": "Delete Book",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": "{{base_url}}/books/1"
                    }
                },
                {
                    "name": "Search Books",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/books/search?title=Sample&authors[]=1",
                            "host": ["{{base_url}}"],
                            "path": ["books", "search"],
                            "query": [
                                { "key": "title", "value": "Sample" },
                                { "key": "authors[]", "value": "1" }
                            ]
                        }
                    }
                },
                {
                    "name": "Fetch Books By Author",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{base_url}}/authors/1/books"
                    }
                }
            ]
        },
        {
            "name": "Authors",
            "item": [
                {
                    "name": "Get All Authors",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{base_url}}/authors"
                    }
                },
                {
                    "name": "Create Author",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"books\": [1,2]\n}"
                        },
                        "url": "{{base_url}}/authors"
                    }
                },
                {
                    "name": "Update Author",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"first_name\": \"Jane\",\n  \"last_name\": \"Doe\",\n  \"books\": [1]\n}"
                        },
                        "url": "{{base_url}}/authors/1"
                    }
                },
                {
                    "name": "Delete Author",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": "{{base_url}}/authors/1"
                    }
                }
            ]
        },
        {
            "name": "Patrons",
            "item": [
                {
                    "name": "Get All Patrons",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{base_url}}/patrons"
                    }
                },
                {
                    "name": "Create Patron",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Alice Smith\",\n  \"email\": \"alice@example.com\"\n}"
                        },
                        "url": "{{base_url}}/patrons"
                    }
                },
                {
                    "name": "Update Patron",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Alice Johnson\",\n  \"email\": \"alice.johnson@example.com\"\n}"
                        },
                        "url": "{{base_url}}/patrons/1"
                    }
                },
                {
                    "name": "Delete Patron",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": "{{base_url}}/patrons/1"
                    }
                },
                {
                    "name": "Borrow Book",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": "{{base_url}}/patrons/1/books/2/borrow"
                    }
                },
                {
                    "name": "Return Book",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": "{{base_url}}/patrons/1/books/2/return"
                    }
                }
            ]
        }
    ]
}
